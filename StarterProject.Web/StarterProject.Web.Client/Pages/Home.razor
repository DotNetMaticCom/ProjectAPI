@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home - StarterProject</PageTitle>

<div class="bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24">
        <div class="text-center">
            <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
                <span class="block">Welcome to</span>
                <span class="block text-primary-600">StarterProject</span>
            </h1>
            <p class="mx-auto mt-3 max-w-md text-base text-gray-500 sm:text-lg md:mt-5 md:max-w-3xl md:text-xl">
                A modern Blazor application with JWT authentication, TailwindCSS styling, and clean architecture.
            </p>
            <div class="mx-auto mt-5 max-w-md sm:flex sm:justify-center md:mt-8">
                <AuthorizeView>
                    <Authorized>
                        <div class="rounded-md shadow">
                            <a href="/dashboard" class="btn btn-primary text-base md:text-lg px-8 py-3">
                                Go to Dashboard
                            </a>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="rounded-md shadow">
                            <a href="/register" class="btn btn-primary text-base md:text-lg px-8 py-3">
                                Get Started
                            </a>
                        </div>
                        <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
                            <a href="/login" class="btn btn-outline text-base md:text-lg px-8 py-3">
                                Sign In
                            </a>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
    
    <div class="bg-gray-50">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
            <div class="text-center">
                <h2 class="text-3xl font-bold text-gray-900">Built with Modern Technologies</h2>
                <p class="mt-4 text-lg text-gray-600">
                    Leveraging the latest in web development for optimal performance and developer experience.
                </p>
            </div>
            
            <div class="mt-12 grid grid-cols-1 gap-8 md:grid-cols-3">
                <div class="text-center">
                    <div class="mx-auto h-12 w-12 text-primary-600">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <h3 class="mt-4 text-lg font-semibold text-gray-900">Secure Authentication</h3>
                    <p class="mt-2 text-gray-600">JWT-based authentication with refresh tokens and role-based authorization.</p>
                </div>
                
                <div class="text-center">
                    <div class="mx-auto h-12 w-12 text-primary-600">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <h3 class="mt-4 text-lg font-semibold text-gray-900">Blazing Fast</h3>
                    <p class="mt-2 text-gray-600">Optimized for performance with server-side rendering and WebAssembly.</p>
                </div>
                
                <div class="text-center">
                    <div class="mx-auto h-12 w-12 text-primary-600">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                        </svg>
                    </div>
                    <h3 class="mt-4 text-lg font-semibold text-gray-900">Flexible Architecture</h3>
                    <p class="mt-2 text-gray-600">Clean architecture with CQRS pattern for maintainable and scalable code.</p>
                </div>
            </div>
        </div>
    </div>
</div>